{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++.exe 生成活动文件",
            "type": "shell",
            "command": "C:\\mingw64_15\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "${file}",
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe",
                "-std=c++20",
                "-I",
                "C:\\mingw64_15\\mingw64\\include",
                "-leasyxw",
                "-lgdi32",
                "-luser32",
                "-lkernel32",
                "-lws2_32",
                "-lmswsock"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "MinGW g++ 编译任务"
        }
    ]
}
